---
const { video_source } = Astro.props;
---

<video class="video-bg" autoplay muted loop>
    <source src={ video_source } type="video/mp4">
</video>

<style lang="scss" is:inline>
    .video-bg {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        object-fit: cover;
        z-index: -1;
    }
</style>